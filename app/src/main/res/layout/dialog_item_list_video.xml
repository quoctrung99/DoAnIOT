<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:elevation="8dp" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view5"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="-125dp"
            android:background="#c5d4da"
            android:elevation="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f8f9fb"
                android:padding="20dp"
                android:textColor="#000000"
                android:text="File management"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_share_24_color"
                android:drawablePadding="12dp"
                android:padding="10dp"
                android:text="Share video"
                android:textColor="#043a99"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPlayVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_smart_display_24"
                android:drawablePadding="12dp"
                android:padding="10dp"
                android:text="Play video"
                android:textColor="#043a99"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDeleteVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_delete_24"
                android:drawablePadding="12dp"
                android:padding="10dp"
                android:text="Delete video"
                android:textColor="#043a99"
                android:textStyle="bold" />

            <View
                android:id="@+id/view8"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#8C8A8A" />

            <TextView
                android:id="@+id/txtCancelVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_cancel_24_blue"
                android:drawablePadding="12dp"
                android:padding="10dp"
                android:text="Cancel"
                android:textColor="#043a99"
                android:textStyle="bold" />

            <View
                android:id="@+id/view9"

                android:layout_width="150dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="#0E0E0E"
                android:elevation="4dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>